{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Godot C# Project",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--configuration",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": ["$msCompile"]
        }
    ]
}